<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        tools:context=".NewReservaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp">

        <TextView
            android:id="@+id/addReserva"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:text="Reserva"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/addReservaJinete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Introduce el nombre del jinete"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_below="@id/addReserva"
            android:background="@drawable/pink_border"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

        <EditText
            android:id="@+id/addReservaTelefono"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Introduce tu telÃ©fono"
            android:padding="12dp"
            android:textSize="20sp"
            android:layout_below="@id/addReservaJinete"
            android:background="@drawable/pink_border"
            android:layout_marginTop="16dp"
            android:maxLines="1" />

        <TextView
            android:id="@+id/eligeCaballo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addReservaTelefono"
            android:layout_marginTop="12dp"
            android:text="Haz click y elige el caballo del listado inferior"
            android:textSize="18sp"
            android:textColor="@color/pink" />

        <Spinner
            android:id="@+id/spinnerReservaCaballo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eligeCaballo"
            android:layout_marginTop="12dp"
            android:background="@drawable/pink_border"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/addReservaFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Haz click para reservar la fecha"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="18sp"
            android:backgroundTint="@color/pink"
            android:textColor="@color/white"
            android:layout_below="@id/spinnerReservaCaballo"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/eligeHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/addReservaFecha"
            android:layout_marginTop="12dp"
            android:text="Haz click y elige la hora"
            android:textSize="18sp"
            android:textColor="@color/pink" />

        <Spinner
            android:id="@+id/addReservaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eligeHora"
            android:layout_marginTop="12dp"
            android:background="@drawable/pink_border"
            android:minHeight="48dp" />


        <EditText
            android:id="@+id/addReservaComentario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter the description"
            android:gravity="top"
            android:padding="12dp"
            android:textSize="18sp"
            android:background="@drawable/pink_border"
            android:layout_below="@id/addReservaHora"
            android:layout_marginTop="12dp" />

    </RelativeLayout>
    </ScrollView>
</layout>